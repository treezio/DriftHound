<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <img src="/drifthound_logo.png" alt="DriftHound Logo" class="login-logo">
      <h1>DriftHound</h1>
      <p class="login-subtitle">Terraform Drift Monitor</p>
    </div>

    <%= form_with url: login_path, method: :post, class: "login-form" do |f| %>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" required autofocus placeholder="admin">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required placeholder="Enter your password">
      </div>

      <button type="submit" class="btn btn-primary btn-block">Sign In</button>
    <% end %>

    <p class="login-version">v<%= Drifthound::Version %></p>
  </div>
</div>
