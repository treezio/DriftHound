<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <img src="/drifthound_logo.png" alt="DriftHound" class="login-logo">
      <h1>Create Account</h1>
      <p class="login-subtitle">You've been invited to join DriftHound</p>
    </div>

    <div class="invite-role-info">
      <p>You will be assigned the role: <span class="role-badge role-badge--<%= @invite.role %>"><%= @invite.role.humanize %></span></p>
    </div>

    <% if @user.errors.any? %>
      <div class="form-errors">
        <h3>Please fix the following:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: register_path(token: @invite.token), class: "login-form" do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, value: @invite.email, disabled: true, class: "form-control-disabled" %>
        <span class="form-hint">Email is set by your invitation</span>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, autofocus: true, autocomplete: "new-password" %>
        <span class="form-hint">Min 8 characters, at least 1 letter and 1 number</span>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <%= form.submit "Create Account", class: "btn btn-primary btn-block" %>
    <% end %>

    <p class="login-version">Already have an account? <%= link_to "Login", login_path %></p>
  </div>
</div>
